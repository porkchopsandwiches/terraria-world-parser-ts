{
    "extends": [
        "plugin:unicorn/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
		"unicorn/filename-case": "off",
		"unicorn/no-useless-undefined": "off",
		"@typescript-eslint/no-empty-function": "off",
        "prettier/prettier": [
            "error",
            {
                "useTabs": true,
                "tabWidth": 4,
				"semi": true,
				"bracketSpacing": true,
                "singleQuote": false,
                "endOfLine": "auto",
                "printWidth": 360,
				"trailingComma": "all"
            }
        ]
    }
}
